[logging]
 default = FILE:/var/log/krb5libs.log
 kdc = FILE:/var/log/krb5kdc.log
 admin_server = FILE:/var/log/kadmind.log

[libdefaults]
 default_realm = <%= @krb5_realm %>
 dns_lookup_realm = true
 dns_lookup_kdc = true
 ticket_lifetime = 24h
 renew_lifetime = 7d
 rdns = false
 forwardable = yes

[realms]
  <%= @krb5_realm %> = {
  kdc = <%= @krb5_kpasswd %>
  admin_server = <%= @krb5_kpasswd %>
 }

[domain_realm]
 .<%= @domains %> = <%= @krb5_realm %>
 <%= @domains %> = <%= @krb5_realm %>
